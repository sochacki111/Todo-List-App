<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <% todoLists.forEach(todoList => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-dark">
                <div class="card-header bg-secondary">
                    <%= todoList.title %>
                </div>
                <ul class="list-group list-group-flush">
                    <% todoList.todoEntries.forEach(entry => { %>
                        <li class="list-group-item">
                            <%= entry %>
                        </li>
                    <% }) %>
                </ul>

                <form class="listEntry" action="todos/addTask" method="POST">
                    <input name="todoEntry" class="textInput" type="text" placeholder="Add new list entry..."
                        required />
                    <input name="todo_id" type="hidden" value="<%= todoList._id %>" />
                </form>
            </div>
        </div>
        <% }) %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <form action="/todos" method="POST">
                    <div class="form-group">
                        <label for="name" class="sr-only">Title</label>
                        <input class="form-control" type="text" name="title" placeholder="Enter list title..."
                            required />
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-success">
                            Add List
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/todos.js"></script>
<%- include('../partials/footer') %>